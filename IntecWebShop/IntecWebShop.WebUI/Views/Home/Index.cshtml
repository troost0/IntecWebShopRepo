@model IEnumerable<IntecWebShop.Core.Models.Product>

@{
    ViewBag.Title = "Home Page";
}

<h1>Products</h1>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4" style="height:300px;padding:10px;margin:10px;border:solid thin black">
            <div class="col-md-12">
                <img class="img-responsive" style="height:150px" src="~/Content/ProductImages/@item.Image" />
            </div>
            <div class="col-md-12">
                <strong>
                    @Html.ActionLink(item.Name, "Details", new { id = item.Id })
                </strong>
            </div>
            <div class="col-md-12">
                <p>
                    @item.Description
                </p>
            </div>
            <div class="col-md-12">
                <h4>
                    @item.Price
                </h4>
            </div>
            <div class="col-md-12">
                <a href="#" class="btn btn-success"><strong>Add To Cart</strong></a>
            </div>
        </div>
    }
</div>
