@model IntecWebShop.Core.ViewModels.ProductListViewModel

@{
    ViewBag.Title = "Home Page";
}

<h1>Products</h1>

    <h4>Filter By Category</h4>
    <div class="list-group">
        <div class="col-md-2">
            @Html.ActionLink("All", "Index", null, new { @class = Request["Category"] == null ? "list-group-item active" : "list-group-item" })

            @foreach (var item in Model.Categories)
            {

                @Html.ActionLink(item.Category, "Index", new { Category = item.Category }, new { @class = Request["Category"] == item.Category ? "list-group-item active" : "list-group-item" })
            }
        </div>
    </div>


<div class="row">
    @foreach (var item in Model.Products)
    {
        <div class="col-md-2" style="height:350px;padding:10px;margin:10px;border:solid thin black">
            <div class="col-md-12 zoom">
                <img class="img-responsive" style="height:200px" src="~/Content/ProductImages/@item.Image" />
            </div>
            <div class="col-md-12">
                <strong>
                    @Html.ActionLink(item.Name, "Details", new { id = item.Id })
                </strong>
            </div>
            <div class="col-md-12">
                <p>
                    @item.Description
                </p>
            </div>
            <div class="col-md-12">
                <h4>
                    @item.Price
                </h4>
            </div>
            <div class="col-md-12">
                <a href="#" class="btn btn-success"><strong>Add To Cart</strong></a>
            </div>
        </div>
    }
</div>
